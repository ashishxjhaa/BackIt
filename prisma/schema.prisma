
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String      @id @default(uuid())
  fullName    String
  email       String      @unique
  password    String
  projects    Project[]
  upvotedProjects Project[] @relation("UserUpvotes")
  heartedProjects Project[] @relation("UserHearts")
  savedProjects   Project[] @relation("UserSaves")
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String
  link        String
  logoUrl     String
  tags        String[]
  upvotes     Int      @default(0)
  hearts      Int      @default(0)
  saves       Int      @default(0)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  upvotedBy   User[]   @relation("UserUpvotes")
  heartedBy   User[]   @relation("UserHearts")
  savedBy     User[]   @relation("UserSaves")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}